# TEST FUNCTIONS
FUNCTION COUNTDOWN()
    WHILE $TIMER > 0
        STRING .
        $TIMER = $TIMER - 1
        DELAY 500
    END_WHILE
    RETURN TRUE
END_FUNCTION

# Function call
VAR $OK = TRUE



VAR $TIMER = 10

COUNTDOWN()

IF $OK == TRUE
    STRING It's ok
END_IF


